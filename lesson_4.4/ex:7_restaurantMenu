#include <iostream>

int main() {
    
    int weekNumber;
    int b = 0;

    std::cout << "Программа для предоставления меню ресторана на дни недели" << std::endl;
    std::cout << std::endl;
    std::cout << "Введите желаемый день недели (от 1 до 7): ";
    std::cin >> weekNumber;

    if (weekNumber == 1) {
        std::cout << "Меню на сегодня (понедельник):" << std::endl;
        std::cout << "Гороховый суп" << std::endl;
        std::cout << "Салат 'Цезарь' с креветками" << std::endl;
        std::cout << "Куриная ножка с пюре" << std::endl;
        std::cout << "Морс" << std::endl;
    } else if (weekNumber == 2) {
        std::cout << "Меню на сегодня (вторник):" << std::endl;
        std::cout << "Харчо" << std::endl;
        std::cout << "Салат 'Оливье'" << std::endl;
        std::cout << "Баварские колбаски с капустой" << std::endl;
        std::cout << "Морс" << std::endl;
    } else if (weekNumber == 3) {
        std::cout << "Меню на сегодня (среда):" << std::endl;
        std::cout << "Лапша" << std::endl;
        std::cout << "Салат 'Винегрет'" << std::endl;
        std::cout << "Жаркое" << std::endl;
        std::cout << "Компот" << std::endl;
    }  else if (weekNumber == 4) {
        std::cout << "Меню на сегодня (четверг):" << std::endl;
        std::cout << "Борщ на свинной ножке" << std::endl;
        std::cout << "Салат 'Мимоза'и" << std::endl;
        std::cout << "Плов по-узбекски" << std::endl;
        std::cout << "Компот" << std::endl;
    }  else if (weekNumber == 5) {
        std::cout << "Меню на сегодня (пятница):" << std::endl;
        std::cout << "Щавельный суп" << std::endl;
        std::cout << "Салат 'Летний' с свежих овощей" << std::endl;
        std::cout << "Котлеты на пару с рисом" << std::endl;
        std::cout << "Кисель" << std::endl;
    }  else if (weekNumber == 6) {
        std::cout << "Меню на сегодня (суббота):" << std::endl;
        std::cout << "Солянка" << std::endl;
        std::cout << "Салат 'Морковный'" << std::endl;
        std::cout << "Отбивная с овощами" << std::endl;
        std::cout << "Кисель" << std::endl;
    }  else if (weekNumber == 7) {
        std::cout << "Меню на сегодня (Воскресенье):" << std::endl;
        std::cout << "Уха с лосося" << std::endl;
        std::cout << "Салат 'Лесной' с шампиньонами" << std::endl;
        std::cout << "макароны с молочными сосисками" << std::endl;
        std::cout << "Черный чай" << std::endl;
    } else {
        std::cout << "Ошибка! Не выполнены условия ввода данных!" << std::endl;
    }

}
